programa {
  funcao inicio() {
    
    real pi
    real r
    real area

    escreva("Vamos calcular a areá do Circulo  ")
    escreva("Escreva valor de Pi: ")
    leia(pi)
    escreva("Escreva valor do Raio: ")
    leia(r)

    area = pi * (r*r)

    escreva("Valor da área do Circulo é: ", area)
  }
}
